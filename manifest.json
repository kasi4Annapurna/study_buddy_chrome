{
  "manifest_version": 3,
  "name": "Student Buddy",
  "version": "1.0",
  "description": "A focus tool to block distracting websites.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}